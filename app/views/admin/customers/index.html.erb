<div class="container">
 <div class="text-center p-3">
  <h1 class="text p-3">ユーザー一覧</h1>

   <%= form_with url: admin_search_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword, value: @keyword, class: 'location sm' %>
    <%= f.submit "検索", class: "button" %>
   <% end %>
   <table class="table-admin-user">
     <tr>
      <th>ユーザーID</th>
      <th>名前</th>
     </tr>
     <% @customers.each do |customer| %>
     <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.name, admin_customer_path(customer.id) %></td>
     </tr>
     <% end %>
   </table>
   <p><%= link_to "ユーザー新規作成", new_admin_customer_path, class: "button-user-new" %></p>
 </div>
</div>