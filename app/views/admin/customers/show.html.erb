<div class="container">
  <div class="text-center p-3">
    <h4>ユーザー詳細</h4>

    <p><%= @customer.name %>さん</p>

    <table class="table-show">
      <tr>
        <th>ユーザーID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>名前</th>
        <td><%= @customer.name %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
    <p><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "button-show" %>
    <%= link_to "勤怠一覧", admin_attendance_path(@customer.id), class: "button-admin-index" %>
    </p>
  </div>
</div>