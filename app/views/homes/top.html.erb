<div class="container">
  <div class="text-center p-5">
   <% if flash[:notice] %>
     <div class="alert alert-success" role="alert">
     <p class="notice text-center" style="color:green;"><%= flash[:notice] %></p></div>
   <% end %>
   <% if customer_signed_in? %>
    <div class="text p-3"><%= link_to "打刻をする", new_attendance_path, class: 'button' %></div>

   <% else %>
    <a><button class="btn btn-sm btn-outline-secondary shadow-sm" type="button">
    <%= link_to "ユーザーログイン",  new_customer_session_path, class: 'text-dark' %>
    </button></a>
   <% end %>
  </div>
</div>