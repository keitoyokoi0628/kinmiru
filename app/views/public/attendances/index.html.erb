<h4>勤怠一覧</h4>
<table>
  <tr>

    <th>日付</th>
    <th>出勤時刻</th>
    <th>退勤時刻</th>
    <th>勤務地</th>
    <th>ステータス</th>
  </tr>

  <!-- ここにeach文 -->


<% @attendances.each do |attendance| %>
<tr>

 <td>
  <%= attendance.created_at.strftime('%Y %-m/%d') %>
  </td>
   <td>
  <%= attendance.start.strftime('%H:%M') %>
  </td>

  <td>
  <% unless attendance.end.nil? %>
  <%= attendance.end.strftime('%H:%M') %>
  <% end %>
  </td>

  <td>
  <%= attendance.location %>
  </td>

  <td>
  <%= attendance.is_active_i18n %>
  </td>

  <td>
  <P><%= link_to "修正", timesedit_path(attendance) %></P>
  </td>
<% end %>

  </tr>
</table>